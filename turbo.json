{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "format": {
            "dependsOn": [
                "^format"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:reset": {
            "cache": false,
            "persistent": true
        },
        "db:seed": {
            "cache": false,
            "persistent": true
        },
        "db:migrate": {
            "cache": false,
            "persistent": true
        },
        "db:check": {
            "cache": false
        },
        "auth:generate": {
            "cache": false,
            "persistent": true
        },
        "auth:migrate": {
            "cache": false,
            "persistent": true
        }
    }
}