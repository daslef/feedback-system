{
    "name": "feedback-system",
    "private": true,
    "type": "module",
    "scripts": {
        "check": "oxlint",
        "dev": "turbo dev",
        "build": "turbo build",
        "check-types": "turbo check-types",
        "format": "pnpm exec biome format --fix --json-formatter-enabled=false",
        "dev:admin": "turbo -F admin dev",
        "dev:web": "turbo -F web dev",
        "dev:server": "turbo -F server dev",
        "dev:workers": "turbo -F @shared/queue dev",
        "auth:generate": "turbo -F @shared/auth auth:generate",
        "auth:migrate": "turbo -F @shared/auth auth:migrate",
        "db:reset": "turbo -F @shared/database db:reset",
        "db:seed": "turbo -F @shared/database db:seed",
        "db:check": "turbo db:check",
        "db:migrate": "turbo -F @shared/database db:migrate"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "oxlint": "catalog:",
        "turbo": "catalog:"
    },
    "packageManager": "pnpm@10.4.1",
    "engines": {
        "node": ">=22.10.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "better-sqlite3",
            "esbuild"
        ]
    }
}